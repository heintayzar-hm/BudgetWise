<main class="min-h-screen flex flex-col bg-slate-100">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => ""} ) do |f| %>
  <% content_for :page_title do %>
  Log In
<% end %>
 <% content_for :submit do %>
   <%= f.submit "Log in" %>
<% end %>
<%= render partial: "components/navbar", locals: {back: true, show_search_bar: false}%>



  <div class="my-3 px-2 bg-white flex flex-col">
    <div class="field">
    <%= f.email_field :email,placeholder:"Email", autofocus: true, autocomplete: "email", class:"w-full bg-white border-b border-slate-200 border-t border-slate-200 focus:outline-none p-2" %>
  </div>

  <div class="field">
    <%= f.password_field :password,placeholder:"Password", autocomplete: "current-password",class:"w-full bg-white border-b border-slate-200 border-t border-slate-200 focus:outline-none p-2"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field py-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  </div>
<% end %>

<%= render "devise/shared/links" %>

</main>
